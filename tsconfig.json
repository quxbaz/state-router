{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src/",
    "declaration": true,
    "declarationDir": "lib/",
    "declarationMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "lib/",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5",
  },
  // "files": [
  //   "test/path-util.test.ts",
  //   "test/smoke.test.tsx",
  // ],
  "include": [
    "src/**/*",
    "test/**/*",
  ],
  "exclude": ["node_modules/"],
}
